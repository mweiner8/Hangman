<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="standard_text_input_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="standard_text_input_edit_text_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:maxLength">1</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="overlapAnchor">false</item>
    </style>

</resources>